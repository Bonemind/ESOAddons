<GuiXml>
    <Controls>
        <TopLevelControl name="AwesomeInfo" mouseEnabled="true" movable="true" clampedToScreen="true">
            <Dimensions x="200" y="150" />

			<OnMouseEnter>
				AwesomeInfo:SetAlpha(1)
			</OnMouseEnter>

			<OnUpdate>
                AI.OnUpdate()
			</OnUpdate>

			<OnMoveStart>
				AI.MoveStart()
			</OnMoveStart>

			<OnMoveStop>
				AI.MoveStop()
			</OnMoveStop>

            <Controls>

                <Backdrop name="$(parent)BG" inherits="ZO_DefaultBackdrop" />

                <Label name="$(parent)LabelTime" font="ZoFontWinH1" color="FFFFFF" inheritAlpha="true" wrapMode="TRUNCATE" verticalAlignment="TOP" horizontalAlignment="CENTER" text="" />
                <Label name="$(parent)LabelDate" font="ZoFontWinH5" color="FFFFFF" inheritAlpha="true" wrapMode="TRUNCATE" verticalAlignment="TOP" horizontalAlignment="CENTER" text="" />
                <Label name="$(parent)LabelSkills" font="ZoFontWinH5" color="FFFFFF" inheritAlpha="true" wrapMode="TRUNCATE" verticalAlignment="TOP" horizontalAlignment="CENTER" text="" />
                <Label name="$(parent)LabelBags" font="ZoFontWinH5" color="FFFFFF" inheritAlpha="true" wrapMode="TRUNCATE" verticalAlignment="TOP" horizontalAlignment="CENTER" text="" />
                <Label name="$(parent)LabelDura" font="ZoFontWinH5" color="FFFFFF" inheritAlpha="true" wrapMode="TRUNCATE" verticalAlignment="TOP" horizontalAlignment="CENTER" text="" />
                <Label name="$(parent)LabelResearch" font="ZoFontWinH5" color="FFFFFF" inheritAlpha="true" wrapMode="TRUNCATE" verticalAlignment="TOP" horizontalAlignment="CENTER" text="" />
                <Label name="$(parent)LabelHorse" font="ZoFontWinH5" color="FFFFFF" inheritAlpha="true" wrapMode="TRUNCATE" verticalAlignment="TOP" horizontalAlignment="CENTER" text="" />

            </Controls>
        </TopLevelControl>
    </Controls>
</GuiXml>